command=/usr/lib/i3blocks/$BLOCK_NAME
separator=true
separator_block_width=25
markup=none

[focused window]
command=xdotool getwindowfocus getwindowname
min_width=700
align=center
interval=3
signal=10


[mail]
command=i3_mailcheck
interval=600

[battery]
command=paste -d" " /sys/class/power_supply/BAT0/status /sys/class/power_supply/BAT0/capacity
interval=300

[date]
#command=date +'%a %b %d, %H:%M'
command=i3_date
interval=60
